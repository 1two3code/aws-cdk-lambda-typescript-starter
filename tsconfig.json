{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext", "dom", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist-server",
    "resolveJsonModule": true
  },
  "include": ["client/**/*", "server/**/*", "cdk.ts", "devserver.ts"]
}
